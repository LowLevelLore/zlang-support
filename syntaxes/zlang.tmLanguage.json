{
  "scopeName": "source.zlang",
  "patterns": [
    {
      "name": "keyword.control.zlang",
      "match": "\\b(fn|let|if|else|return|extern)\\b"
    },
    {
      "name": "storage.type.zlang",
      "match": "\\b(integer|float|double|boolean|none|string|uint64_t|uint32_t|uint16_t|uint8_t|int64_t|int32_t|int16_t|uint8_t|size_t)\\b"
    },
    {
      "name": "constant.numeric.zlang",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "string.quoted.double.zlang",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "comment.line.double-slash.zlang",
      "match": "//.*$"
    }
  ]
}
